<br>
<% if current_user.admin == true%>
<section class="tables">   
            <div class="container-fluid">
              <div class="row">
                <div class="col-lg-6">
                  <div class="card">
                   
                  
                    <div class="card-header d-flex align-items-center">
                      <h3 class="h4"> Usuarios </h3>
                    </div>
                    <div class="card-body">

                      <!-- formulario de busqueda -->
  <%= form_tag users_path, method: :get do %>
      <div class="form-group">
          <%= text_field_tag :name, params[:name], class: "form-control", placeholder: "Usuario" %>
      </div>
      <%= submit_tag "Buscar", name: nil, class: "btn btn-primary btn-md" %>
  <% end %>
                      <!-- fin formulario de busqueda -->

                      <div class="table-responsive">  
                          <table class="table table-hover" >
                            <thead>
                              <tr>
                                <th>Nombre</th>
                                <th>Correo</th>
                                <th>Administrador</th>
                                <th colspan="3"></th>
                              </tr>
                            </thead>
                            <tbody>
                              <% @users.each do |user| %>
                                <tr>
                                  <td><%= user.name %></td>
                                  <td><%= user.email %></td>
                                  <% if user.admin == true%>
                                  <td>Es administrador</td>
                                  <% else %>
                                  <td>No es administrador</td>
                                  <% end %>
                                  <td><%= link_to 'Mostrar', user %></td>
                                  <td><%= link_to 'Editar', edit_user_path(user) %></td>
                                  <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                                </tr>
                              <% end %>
                            </tbody>
                          </table>
                      </div>
                    </div>
                  </div>
                </div>
               
               
                  </div>
                </div>
              </div>
            </div> 
          </section>

          <% else %>


                    <div class="card-header d-flex align-items-center">
                      <h3 class="h1"> ACCESO DENEGADO </h3>
                    </div>

                    <% end %>

