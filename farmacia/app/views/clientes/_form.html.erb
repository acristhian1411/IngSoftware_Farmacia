<section class="no-padding-top">
          <div class="container-fluid">
            <div class="row">
<%= form_for(@cliente) do |f| %>
  <% if @cliente.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cliente.errors.count, "error") %> prohibited this cliente from being saved:</h2>

      <ul>
      <% @cliente.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="col-lg-12">
                <div class="block">
                  <div class="title"><strong>Formulario De Clientes</strong></div>
                  <div class="block-body text-center">
  <div class="field">
    <%= f.label :nombre %><br>
    <%= f.text_field :nombre, type: "text", required_pattern: "text" %>
  </div>
  <div class="field">
    <%= f.label :apellido %><br>
    <%= f.text_field :apellido, type: "text", required_pattern: "text" %>
  </div>
  <div class="field">
    <%= f.label :ruc %><br>
    <%= f.text_field :ruc, type: "number", required_pattern: "[0-9]{4}-[0-9]{2}-[0-9]{2}" %>
  </div>
  <div class="field">
    <%= f.label :direccion %><br>
    <%= f.text_field :direccion %>
  </div>
  <div class="field">
    <%= f.label :telefono %><br>
    <%= f.number_field :telefono, type: "number", required_pattern: "[0-9]{4}-[0-9]{2}-[0-9]{2}" %>
  </div>
  <div class="field">
    <%= f.label :cliente_active %><br>
    <%= f.check_box :cliente_active %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  </div>
    </div>
  </div>
 </div>
<% end %>
  </div>
</section>
