  <section class="tables">   
            <div class="container-fluid">
              <div class="row">
                <div class="col-lg-12">
                  <div class="card">
                   
                  
                    <div class="card-header d-flex align-items-center">
                      <h3 class="h4">Clientes</h3>
                    </div>
                    <div class="card-body">

                      <!-- formulario de busqueda -->
  <%= form_tag clientes_path, method: :get do %>
      <div class="form-group">
          <%= text_field_tag :nombre, params[:nombre], class: "form-control", placeholder: "Nombre" %>
      </div>
      <%= submit_tag "Buscar", name: nil, class: "btn btn-primary btn-md" %>
  <% end %>
                      <!-- fin formulario de busqueda -->

                      <div class="table-responsive">  
                        <table class="table table-striped">
                          <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Ruc</th>
      <th>Direccion</th>
      <th>Telefono</th>

      <% if current_user.admin == true %>
      <th>Cliente active</th>
      <% end %>

      <th colspan="3"></th>
    </tr>
  </thead>
  <%= @algo %>
  <%= @user%>
  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        
              <td><%= cliente.nombre %></td>
              <td><%= cliente.apellido %></td>
              <td><%= cliente.ruc %></td>
              <td><%= cliente.direccion %></td>
              <td><%= cliente.telefono %></td>

      <% if current_user.admin == true %>
              <td><%= cliente.cliente_active %></td>
      <% end %>

              <td><%= link_to 'Mostrar', cliente %></td>
              <td><%= link_to 'Editar', edit_cliente_path(cliente) %></td>
              <td><%= link_to 'Eliminar', cliente, method: :delete, data: { confirm: 'EstÃ¡s seguro?' } %></td>


      </tr>
    <% end %>
  </tbody>
                        </table>
                        <%= link_to 'Nuevo Cliente', new_cliente_path %>
                      </div>
                    </div>
                  </div>
                </div>
               
               
                  </div>
                </div>
              </div>
            </div>

            
 
              
