<p id="notice"><%= notice %></p>

<h1>Listing Clientes</h1>

<section class="no-padding-top">
          <div class="container-fluid">
            <div class="row">
 <div class="col-lg-12">
                <div class="block">
                  <div class="title"><strong>Clientes</strong></div>
                  <div class="table-responsive"> 
                    <table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Ruc</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th>Cliente active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nombre %></td>
        <td><%= cliente.apellido %></td>
        <td><%= cliente.ruc %></td>
        <td><%= cliente.direccion %></td>
        <td><%= cliente.telefono %></td>
        <td><%= cliente.cliente_active %></td>
        <td><%= link_to 'Show', cliente %></td>
        <td><%= link_to 'Edit', edit_cliente_path(cliente) %></td>
        <td><%= link_to 'Destroy', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Cliente', new_cliente_path %>
 </div>
                </div>
              </div>
              </div>
          </div>
 </section>




