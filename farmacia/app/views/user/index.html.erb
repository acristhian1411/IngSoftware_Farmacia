      <th>Fecha de creacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @user.each do |user| %>
      <tr>
        
              <td><%= user.name %></td>
              <td><%= user.email %></td>
