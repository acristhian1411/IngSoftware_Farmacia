              <td><%= link_to("Detalles", {:action => 'show', :id => user.id}, :class => "btn btn-primary") %></td>
              <td><%= link_to("Editar", {:action => 'edit', :id => user.id}, :class => "btn btn-primary") %></td>
              <td><%= link_to("Borrar", {:action => 'destroy', :id => user.id}, :class => "btn btn-primary") %></td>
              </tr>
    <% end %>
  </tbody>
