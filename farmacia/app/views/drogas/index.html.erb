<p id="notice"><%= notice %></p>

<section class="no-padding-top">
          
 </section>


  <section class="tables">   
            <div class="container-fluid">
              <div class="row">
                <div class="col-lg-12">
                  <div class="card">
                   
                  
                    <div class="card-header d-flex align-items-center">
                      <h3 class="h4">Drogas</h3>
                    </div>
                    <div class="card-body">
                      <div class="table-responsive">  
                        <table class="table table-striped">
                      <thead>

                        <tr>
                        <th>Droga descrip</th>
                        <th>Droga active</th>
                        <th colspan="3"></th>
                        </tr>
                      </thead>

                      <tbody>
                        <% @drogas.each do |droga| %>
                        <tr>
                          <% if current_user.admin == true %>
                              <td><%= droga.droga_descrip %></td>
                              <td><%= droga.droga_active %></td>
                              <td><%= link_to 'Mostrar', droga %></td>
                              <td><%= link_to 'Editar', edit_droga_path(droga) %></td>
                              <td><%= link_to 'Eliminar', droga, method: :delete, data: { confirm: 'Estás seguro' } %></td>
                          <% else %>
                                <% if droga.droga_active == true %>
                                    <td><%= droga.droga_descrip %></td>
                                    <td><%= droga.droga_active %></td>
                                    <td><%= link_to 'Mostrar', droga %></td>
                                    <td><%= link_to 'Editar', edit_droga_path(droga) %></td>
                                    <td><%= link_to 'Eliminar', droga, method: :delete, data: { confirm: 'Estás seguro' } %></td>
                                <% end %>
                          <% end %>

                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                    <%= link_to 'Nueva Droga', new_droga_path %>
                 </div>
                    </div>
                  </div>
                </div>
               
               
                  </div>
                </div>
              </div>
            </div>

            
 
              
          </section>

