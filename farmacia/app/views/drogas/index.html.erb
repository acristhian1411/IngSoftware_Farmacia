<p id="notice"><%= notice %></p>

<h1>Listing Drogas</h1>
   <section class="no-padding-top">
          <div class="container-fluid">
            <div class="row">
 <div class="col-lg-12">
                <div class="block">
                  <div class="title"><strong>Drogas</strong></div>
                  <div class="table-responsive"> 
                    <table class="table table-striped table-hover">
                      <thead>

                        <tr>
                        <th>Droga descrip</th>
                        <th>Droga active</th>
                        <th colspan="3"></th>
                        </tr>
                      </thead>

                      <tbody>
                        <% @drogas.each do |droga| %>
                        <tr>
                          <td><%= droga.droga_descrip %></td>
                          <td><%= droga.droga_active %></td>
                          <td><%= link_to 'Show', droga %></td>
                          <td><%= link_to 'Edit', edit_droga_path(droga) %></td>
                          <td><%= link_to 'Destroy', droga, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                          </tr>
                          <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              </div>
          </div>
        </section>
<br>

