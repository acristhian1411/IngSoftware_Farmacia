<p id="notice"><%= notice %></p>

<h1>Listing Marcas</h1>

<section class="no-padding-top">
          <div class="container-fluid">
            <div class="row">
 <div class="col-lg-12">
                <div class="block">
                  <div class="title"><strong>Marcas</strong></div>
                  <div class="table-responsive"> 
                    <table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Marca descrip</th>
      <th>Marca active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @marcas.each do |marca| %>
      <tr class="danger">
        <td><%= marca.marca_descrip %></td>
        <td><%= marca.marca_active %></td>
        <td><%= link_to 'Show', marca %></td>
        <td><%= link_to 'Edit', edit_marca_path(marca) %></td>
        <td><%= link_to 'Destroy', marca, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Marca', new_marca_path %>
 </div>
                </div>
              </div>
              </div>
          </div>
 </section>



