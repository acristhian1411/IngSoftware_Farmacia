 <body>
    <div class="page login-page">
      <div class="container d-flex align-items-center">
        <div class="form-holder has-shadow">
          <div class="row">
            <!-- Logo & Information Panel-->
            <div class="col-lg-12">
              <div class="info d-flex align-items-center">
                <div class="content">
                  <div class="logo">
                    <h1>Bienvenido</h1>

                    <table class="table table-striped">
  <thead>
    <tr>
      <th colspan="5">Medicamentos que vencen hoy</th>
    </tr>
  </thead>

  <tbody>
    <% @productos.each do |producto| %>
      <% if producto.fecha_vence == Date.today %>
      <tr>
        <td><%= producto.codigo %></td>
        <td><%= producto.prod_descrip %></td>
        <td><%= producto.fecha_vence %></td>
        <td><%= producto.cantidad %></td>
        <td><%= link_to 'Mostrar', producto %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>


   <thead>
    <tr>
      <th colspan="5"> Poca cantidad de medicamento </th>
    </tr>
  </thead>
  <tbody>
    
    <% @productos.each do |producto| %>
    <% if producto.cantidad <=  1  %>
      <tr>
        <td><%= producto.codigo %></td>
        <td><%= producto.prod_descrip %></td>
        <td><%= producto.fecha_vence %></td>
        <td><%= producto.cantidad %></td>
        <td><%= link_to 'Mostrar', producto %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
                  </div>
                  <p></p>
                </div>
              </div>
            </div>
        </div>
      </div>
    </div>
             
 </body>